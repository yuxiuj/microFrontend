{
	"compilerOptions": {
		/* 基础配置 */
		"target": "es6",
		"module": "esnext",
		"lib": ["dom", "es2017"],
		"allowJs": true,
		"checkJs": true,
		"jsx": "preserve",
		"declaration": false,
		"sourceMap": true,
		/* 严格的类型检查选项 */
		"noImplicitAny": false,
		"strictNullChecks": false,
		"noImplicitThis": true,
		/* 额外的检查 */
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		/* 模块解析选项 */
		"baseUrl": "./",
		"moduleResolution": "node",
		"paths": {
			"*": ["*"],
			"@/*": ["src/*"]
		},
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"skipLibCheck": true
	},
	"include": ["src", "src/types"]
}
